datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  GUEST
  USER
  CREATOR
  OFFICIAL
  MAINADMIN
}

enum EventType {
  Major
  Unofficial
  Desi
}

model User {
  id             Int              @id @default(autoincrement())
  email          String           @unique
  username       String?
  password       String
  role           Role             @default(USER)
  createdAt      DateTime         @default(now())

  participations Participation[]   // the events (rounds) theyâ€™ve played
  friendships    Friendship[]      @relation("userFriendships")
  friendsOf      Friendship[]      @relation("friendUserFriendships")
}

model Event {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  type           EventType        @default(Unofficial)
  gameType       String
  winnerCount    Int              @default(1)
  pointSplit     Json
  date           DateTime?

  participants   Int              @default(0)
  participations Participation[]

  majorDetail    Major?           @relation("MajorToEvent")
}

model Major {
  eventId        Int      @id
  event          Event    @relation("MajorToEvent", fields: [eventId], references: [id])
  description    String
  calendarUrl    String
  pointStructure Json
}

model Participation {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   Int
  strokes   Int      // raw strokes for the round
  points    Int      // season points awarded by placement
  playedAt  DateTime @default(now())

  @@index([userId])
  @@index([eventId])
}

model Friendship {
  id        Int      @id @default(autoincrement())
  user      User     @relation("userFriendships", fields: [userId], references: [id])
  userId    Int
  friend    User     @relation("friendUserFriendships", fields: [friendId], references: [id])
  friendId  Int
  createdAt DateTime @default(now())

  @@unique([userId, friendId])
}