datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  events    Event[]

}

model Event {
  id        Int       @id @default(autoincrement())
  eventName String    @unique
  eventType RoundType @default(StrokePlay)
  eventDate DateTime?
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}

enum RoundType {
  StrokePlay
  BestBall
  Scramble
  Wolf
  MatchPlay
}
enum Role {
  GUEST
  USER
  CREATOR
  OFFICIAL
  MAINADMIN
}